---
import Layout from "../../layouts/Layout.astro";
import chamber from "@vtbag/inspection-chamber?url";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<Layout {title}>
  <script is:inline src={chamber} slot="head"/>
  <slot />
</Layout>

<style is:global>
  :root,
  body {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  :root {
    color-scheme: dark;
    font-family: sans-serif;
    view-transition-name: none;
  }
  @view-transition {
    navigation: auto;
  }
</style>
