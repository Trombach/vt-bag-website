---
export interface Props {
  backlink: string;
  prev: string;
  next: string;
}
const { backlink, prev, next } = Astro.props;
---
<div class="demonav">{prev && (<a id="prev" href={prev}>Prev</a>)}<a id="back" href={backlink}>Back to the example list</a>{next && (<a id="next" href={next}>Next</a>)}</div>
<style is:global>
  .demonav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: 0.9rem;
  }
</style>
